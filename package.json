{
  "name": "@boredland/react-ios-pwa-prompt",
  "version": "3.0.0",
  "description": "A React component to prompt the user to add the app as a PWA to the home screen with native iOS styles.",
  "repository": {
    "type": "git",
    "url": "https://github.com/boredland/react-ios-pwa-prompt.git"
  },
  "scripts": {
    "test": "tsc",
    "build": "tsup"
  },
  "keywords": [
    "pwa",
    "prompt",
    "add to home screen",
    "iOS",
    "progressive web app",
    "native"
  ],
  "author": "Jonas Strassel",
  "license": "MIT",
  "private": false,
  "tsup": {
    "entry": [
      "src/index.tsx"
    ],
    "treeshake": true,
    "sourcemap": "inline",
    "minify": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "format": [
      "cjs",
      "esm"
    ],
    "external": [
      "react"
    ]
  },
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@mantine/hooks": "^6.0.13",
    "@types/react": "^18.2.12",
    "@types/react-dom": "^18.2.5",
    "clsx": "^1.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^6.7.0",
    "typescript": "^5.1.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
